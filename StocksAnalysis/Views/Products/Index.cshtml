@model List<CoreBusiness.Product>

@section title
{
    <h3>Product</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category?.Name</td>
                    <td>$@product.Price</td>
                    <td>@product.Quantity</td>                                           <!--  asp-route-id  ->same parameter int id passing in function-->
                    <td><a class=" btn btn-link" asp-controller="products" asp-action="edit" asp-route-id="@product.ProductId">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="products" asp-action="delete" asp-route-productId="@product.ProductId" onclick=" return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>


}
<br />
<a class="btn btn-primary" asp-controller="products" asp-action="add">Add Product</a>

@section Scripts{
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this Product?");
        }
    </script>
}



